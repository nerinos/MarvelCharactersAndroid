<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvCharacterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivPicture"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/ivPicture"
        tools:text="Sample character" />

    <TextView
        android:id="@+id/tvCharacterDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCharacterName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/ivPicture"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        tools:text="Sample character description" />

</RelativeLayout>